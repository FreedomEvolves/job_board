html {
  position: relative;
  min-height: 100%;
}

body {
  background: url(<%= asset_path "blue_shade.png" %>) no-repeat;
  background-size: cover;
  margin-bottom: 20px;
}

.container {
	padding-top: 20px;
  background: rgba(255,255,255,0.8);
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 20px;
	background-color:#f79027;   /* #f79027 */
  color:#416893;
  clear:both;
  text-align:center;
  padding:0px;
}

.navbar-custom {
  color: yellow;
  background-color: #95b9d8;  /*other choices in descending pref: #5d88af, #659fd3  */
}

.logo { 
  width: 50px; 
  height: 50px;
}

.tts-header {
  padding-top: 0px;
  color: red;
  font-family: dosis; /*dosis, nunito, chewy, architects daughter*/
}

#haze {
  padding-top: 0px;
  background: rgba(180,200,200,0.6);
  border-radius: 60px;
  width: 340px;
}
.panel-inline >ul {
  display: inline;
}



