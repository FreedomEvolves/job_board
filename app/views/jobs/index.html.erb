<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>City</th>
      <th>Description</th>
      <th>Perks</th>
      <th>How to apply</th>
      <th>Company name</th>
      <th>Url</th>
      <th>Is featured</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.category %></td>
        <td><%= job.city %></td>
        <td><%= job.description %></td>
        <td><%= job.perks %></td>
        <td><%= job.how_to_apply %></td>
        <td><%= job.company_name %></td>
        <td><%= job.url %></td>
        <td><%= job.is_featured %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

