<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="col-md-12">
      <div class="row">
        <div class="col-sm-6">    
          <div class="field form-group">         
            <%= f.label :company_name %>
            <%= f.text_field :company_name, autofocus: true %>
          </div>
          <div class="field form-group">
            <%= f.label :company_website %>
            <%= f.text_field :url %>
          </div>
          <div class="field form-group">
            <%= f.label :job_title %>
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="field form-group">
            <%= f.label :city %>
            <%= f.select(:city, @cities.collect {|city| [city] }, {:include_blank => 'Please select an item'}) %>
          </div>
          <div class="field form-group">
            <%= f.label :category %>
            <%= f.select(:category, @categories.collect {|cat| [cat] }, {:include_blank => 'Please select an item'}) %>
          </div>
          <div class="field form-group">
            <%= f.label :jobtype %>
            <%= f.select(:jobtype, @jobtypes.collect {|type| [type]}, {:include_blank => 'Please select an item'}) %>
          </div>
        </div>
      </div>
        <div class="field form-group">
          <%= f.label :about_your_company %><br>
          <%= f.text_area :description, class: "form-control", rows: "4"  %>
        </div>
        <div class="field form-group">
          <%= f.label :job_description %><br>
          <%= f.text_area :perks, class: "form-control", rows: "4"  %>
        </div>
        <div class="field form-group">
          <%= f.label :how_to_apply %><br>
          <%= f.text_area :how_to_apply, class: "form-control", rows: "2" %>
        </div>

        <%# if can? :update, jobs %>
        <!-- <div class="field">
          <%#= f.label :is_featured %><br>
          <%#= f.check_box :is_featured %>
        </div> -->
        <%#end%>
        <div class="actions">
          <%= f.submit class: "btn btn-primary" %>
        
      </div>
    </div>
<% end %>
